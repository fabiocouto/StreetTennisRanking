<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.test.myloginapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".view.GuestLoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PlayersListActivity"
            android:label="@string/title_activity_players_list" >
        </activity>
        <activity
            android:name=".view.PlayerDetailActivity"
            android:label="@string/title_activity_player_detail" >
        </activity>
        <activity
            android:name=".view.NewPlayerActivity"
            android:label="@string/title_activity_new_player" >
        </activity>
    </application>

</manifest>
